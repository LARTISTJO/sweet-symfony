{% extends 'base.html.twig' %}

{% block body %}
    <section class="list">
        {% for serie in series %}
        <article>
            <a href="{{ path( 'sweet_details', {'id': serie.id}) }}"
               title="Nombre de saisons | {{ serie.seasons | length }}">
                <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
            </a>
        </article>
        {% endfor %}
    </section>
{% endblock %}

{% block title %}
The best series | {{ parent() }}
{% endblock %}

